<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Snapshot</title>
    <!-- Include Bulma CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.3/css/bulma.min.css">
    <style>
        /* Custom styles here */
    </style>
</head>

<body>
    <!-- Include the navigation bar partial -->
    <% include('./partials/_navbar', { isAuthenticated: isAuthenticated }) %>

    <section class="section">
        <div class="container">
            <h1 class="title">Edit Snapshot</h1>
            <form id="editSnapshotForm">
                <!-- Add fields to edit contextual triggers -->
                <div class="field">
                    <label class="label">Contextual Triggers</label>
                    <div class="control">
                        <input class="input" type="text" name="contextualTriggers" placeholder="Enter contextual triggers">
                    </div>
                </div>
                <div class="field">
                    <div class="control">
                        <button class="button is-primary" type="submit">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.getElementById('editSnapshotForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const formData = new FormData(this);
            const contextualTriggers = formData.get('contextualTriggers');

            try {
                const snapshotId = '<%= snapshotId %>'; // Replace '<%= snapshotId %>' with actual snapshot ID
                const response = await axios.patch(`http://localhost:3001/api/snapshots/${snapshotId}`, { contextualTriggers });
                console.log('Snapshot updated successfully:', response.data);
                // Redirect to viewAllSnapshotsForUser page or display a success message
                window.location.href = '/viewAllSnapshotsForUser';
            } catch (error) {
                console.error('Error updating snapshot:', error);
            }
        });
    </script>
</body>

</html>
